<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>予約確認ページ</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/responsive.css">
  <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/64a65c6c44.js" crossorigin="anonymous"></script>
</head>

<body>
  <%- include('common/header') %>
    <%- include('common/nav') %>
      <main>
        <h1>予約確認ページ</h1>
        <table>
          <thead>
            <tr>
              <th>日付</th>
              <th>時間</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% reservations.forEach(reservation=> { %>
              <tr>
                <td>
                  <%= reservation.dateFormatted %>
                </td>
                <td>
                  <%= reservation.time %>
                </td>
                <td>
                  <button class="cancel-btn" data-date="<%= reservation.date %>"
                    data-time="<%= reservation.time %>">削除</button>
                </td>
              </tr>
              <% }); %>
          </tbody>
        </table>
        <div class="prevreservation">
          <a href="/reservation" id="prevreservation-button">予約ページに戻る</a>
        </div>
      </main>

      <script src="/socket.io/socket.io.js"></script>
      <script src="/js/reserved.js"></script>
      <script src="/js/script.js"></script>
</body>

</html>